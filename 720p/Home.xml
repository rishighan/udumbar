<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="0">
	<defaultcontrol always="true">300</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<include>GlobalBackground</include>

		<control type="wraplist" id="300">
			<description>Home Wraplist</description>
			<posx>60</posx>
			<posy>72</posy>
			<width>1280</width>
			<height>564</height>
			<onup>1</onup>
			<ondown>1</ondown>
			<onleft>3</onleft>
			<onright>3</onright>
			<focusposition>1</focusposition>
			<scrolltime>200</scrolltime>

			<!-- Here goes my effort to create a icon list item -->
      		<itemLayout width="650" height="65">
      			<control type="image">
      				<posx>6</posx>
      				<posy>6</posy>
      				<width>65</width>
      				<height>65</height>
      				<info>ListItem.Icon</info>
      			</control>
      			<control type="label">
					<posx>105</posx>
					<posy>10</posy>
					<width>455</width>
					<height>40</height>
					<font>Home</font>
					<label>ListItem.Label</label>
				</control>

      		</itemLayout>
      		<!-- Here goes something else -->
      		<focusedlayout width="650" height="65">
				<control type="image">
					<posx>6</posx>
					<posy>6</posy>
					<width>65</width>
					<height>65</height>
					<texture>ListItem.Icon</texture>
				</control>
				<control type="label">
					<posx>105</posx>
					<posy>10</posy>
					<width>455</width>
					<height>105</height>
					<font>Home</font>
					<textcolor>-</textcolor>
					<label>ListItem.Label</label>
				</control>
				<control type="image">
					<width>485</width>
					<height>65</height>
					<posx>0</posx>
					<posy>0</posy>
					<visible>Control.HasFocus(50)</visible>
					<texture>list-focus.png</texture>
			</control>
			</focusedlayout>

			<!-- CONTENT OF THE LIST -->
			<content>
				<item id="9">
					<label>$LOCALIZE[2]</label>
					<onclick>SetFocus(1130)</onclick>
					<visible>!Skin.HasSetting(homemenu.music) + [Skin.HasSetting(musicmenu.recent) | Skin.HasSetting(musicmenu.artists) | Skin.HasSetting(musicmenu.played) | Skin.HasSetting(musicmenu.genres) | Skin.HasSetting(musicmenu.addons) | Skin.HasSetting(musicmenu.playlists) | Skin.HasSetting(musicmenu.partymode) | Skin.HasSetting(musicmenu.lastfm) | Skin.HasSetting(musicmenu.videos)]</visible>
				</item>
			</content>

		</control>

		<control type="rss">
			<description>RSS Feed</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>14</height>
			<font>Small</font>
			<urlset>1</urlset>
			<titlecolor>Red</titlecolor>
			<headlinecolor>White</headlinecolor>
			<textcolor>White</textcolor>
		</control>

	</controls>

</window>
